<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="25dp"
    app:cardBackgroundColor="@color/cardColor"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="134dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="83dp"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="29dp"
            app:srcCompat="@drawable/baseline_supervised_user_circle_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="23dp"
            android:fontFamily="sans-serif-medium"
            android:text="Username: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="57dp"
            android:fontFamily="sans-serif-medium"
            android:text="Role"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_promote"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="5dp"
            android:text="Promote to Admin" />

        <Button
            android:id="@+id/btn_disable_acc"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/red"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="66dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:text="Disable Account" />

        <Button
            android:id="@+id/btn_enable_acc"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="66dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:text="Enable Account" />

        <TextView
            android:id="@+id/txt_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/textView"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginBottom="53dp"
            android:layout_toEndOf="@+id/textView2"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/IV_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_baseline_star_24" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>